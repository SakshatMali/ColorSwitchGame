<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.VolumeMenuController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Colour%20Images/VolumeMenu.png" />
         </image>
      </ImageView>
      <ImageView fx:id="home" fitHeight="113.0" fitWidth="116.0" layoutX="470.0" layoutY="19.0" onMouseClicked="#home" onMouseEntered="#glowImage" onMouseExited="#stopGlowing" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Colour%20Images/home.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <Slider fx:id="slider" layoutX="108.0" layoutY="307.0" prefHeight="136.0" prefWidth="384.0" showTickMarks="true" value="50.0">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Slider>
      <Button layoutX="248.0" layoutY="475.0" mnemonicParsing="false" onMouseClicked="#volumeChange" prefHeight="50.0" prefWidth="134.0" text="Change Volume">
         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
